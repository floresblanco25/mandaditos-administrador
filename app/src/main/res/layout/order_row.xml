<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_margin="16dp"
	android:elevation="5dp"
	android:background="#F9F9F9"
	android:gravity="right">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#F1F1F1">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				style="@style/info"
				android:layout_margin="8dp"
				android:textSize="14sp"
				android:typeface="monospace"
				android:id="@+id/numberorderrowTextView1"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Estado"
				android:textAppearance="?android:attr/textAppearanceSmall"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:layout_margin="8dp"
				android:id="@+id/dashboardOrderStatus"
				android:textColor="#FA3D32"
				android:textStyle="bold"/>

			<Spinner
				android:id="@+id/orderStatus_rowSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right">

				<ImageView
					android:src="@drawable/baseline_delete_outline_black_24"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/deleteorderrowImageView1"
					android:paddingRight="8dp"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Empresa:"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/empresaEd"
				android:textSize="14sp"/>

		</LinearLayout>

	</LinearLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cliente"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressA"
				android:textColor="#A02595"
				android:textSize="16sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tel.:"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:textIsSelectable="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/CelulardashboardAddressA"
				android:textColor="#3F6A78"
				android:textStyle="bold"
				android:textSize="16sp"
				android:maxEms="10"
				android:ems="5"
				android:inputType="phone"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Llamar"
				android:id="@+id/llamarorderpoolrowButton1"
				android:textColor="#85089E"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Whatsapp"
				android:textColor="#00DD4B"
				android:id="@+id/whatsapporderrowButton1"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Instrucciones:"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/instruccionesEd"
				android:maxEms="10"
				android:hint="Opcional"
				android:textColor="#ED008B"
				android:textStyle="bold|italic"
				android:textSize="16sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Destino"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressB"
				android:textColor="#00676E"
				android:textSize="14sp"
				android:hint="Escribir dirección, casa, y municipio."/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Costo del producto $"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:inputType="numberDecimal|numberSigned"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				style="@style/info"
				android:id="@+id/costodelproducto"
				android:textColor="#202020"
				android:hint="Obligatorio"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Envío $"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:inputType="numberDecimal|numberSigned"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				style="@style/info"
				android:id="@+id/costodelenvio"
				android:textColor="#3E3E3E"
				android:hint="Obligatorio"
				android:textStyle="bold"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left|center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TOTAL $"
				android:textColor="#000000"
				android:layout_margin="8dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold"
				android:textColor="#7B0D00"
				android:id="@+id/totalCostSum"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Driver Asignado"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="Sin asignar"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/DriverAsignadodashboard"
				android:maxEms="10"
				android:visibility="gone"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/DriverNameTextView"
				android:layout_margin="8dp"
				android:textColor="#35830A"
				android:textSize="16sp"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Whatsapp"
				android:textColor="#0C690E"
				android:id="@+id/whatsappDriverorderrowButton1"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Llamar"
				android:id="@+id/callDriverorderrowButton1"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/orderRowLayoutToCollapse"
			android:visibility="gone">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Código de orden:"
					android:layout_margin="8dp"/>

				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Consultando..."
					android:id="@+id/dashboarOrderTitle"
					android:textSize="14sp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_marginBottom="8dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Dirección Empresa"
					android:layout_margin="8dp"/>

				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/direccionEmpresaEd"
					android:textSize="14sp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left">

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Mapa de partida"
					android:layout_marginRight="8dp"
					android:id="@+id/orderrowButtonPartida"/>

				<Button
					android:layout_width="wrap_content"
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:text="Mapa de destino"
					android:layout_marginRight="8dp"
					android:id="@+id/orderrowButtonDestino"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<Button
					android:layout_width="wrap_content"
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:text="Editar"
					android:layout_marginRight="8dp"
					android:id="@+id/orderrowButtonEditar"/>

				<Button
					android:layout_width="wrap_content"
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:text="Asignar"
					android:layout_marginRight="8dp"
					android:id="@+id/AsignarDriverOrderrow"/>

				<Button
					android:layout_width="wrap_content"
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:text="Guardar"
					android:id="@+id/orderrowButtonGuardar"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<ImageView
			android:src="@drawable/baseline_expand_more_black_24"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/orderrowUnfoldButtom"
			android:padding="4dp"/>

	</LinearLayout>

</LinearLayout>

